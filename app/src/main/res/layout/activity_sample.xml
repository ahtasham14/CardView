<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/endblue"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="Welcome to Business Managment System"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@drawable/aht" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b7b8ba"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:text="Best way to manage your Business"/>

    <Button
        android:id="@+id/buttonsign_in"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:text="Sign In"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/buttonsign_up"
        android:textColor="@color/endblue"
        android:textSize="20dp"
        android:text="Sign Up"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape2"/>

    <RelativeLayout

        android:id="@+id/poweredby"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="right"
        android:layout_marginRight="8dp"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/devstop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="Powered By"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

</LinearLayout>
